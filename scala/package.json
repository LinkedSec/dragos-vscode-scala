{
    "name": "ensime-scala",
    "displayName": "Dragos' Scala Support",
    "description": "Dragos' Scala Language Support",
    "version": "0.0.4",
    "repository": {
        "url": "https://github.com/dragos/dragos-vscode-scala"
    },
    "publisher": "dragos",
    "engines": {
        "vscode": "^1.7.x"
    },
    "categories": [
        "Languages"
    ],
	"activationEvents": [
		"onLanguage:scala"
	],
	"main": "./out/src/extension",
    "contributes": {
        "languages": [{
            "id": "scala",
            "aliases": ["Scala", "scala"],
            "extensions": [".scala"],
            "configuration": "./scala.configuration.json"
        }],
        "grammars": [{
            "language": "scala",
            "scopeName": "source.scala",
            "path": "./syntaxes/scala.tmLanguage"
        }]
    },
    "scripts": {
		"vscode:prepublish": "tsc -p ./",
		"compile": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install"
	},
	"devDependencies": {
		"typescript": "^2.0.10",
		"vscode": "^1.0.3",
		"mocha": "^3.1.2",
		"@types/node": "^6.0.49",
		"@types/mocha": "^2.2.33"
	},
	"dependencies": {
		"vscode-languageclient": "^2.6.3"
	}
}